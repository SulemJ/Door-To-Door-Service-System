<!DOCTYPE html>
<html>
<head>
  <title>Admin - Provider Applicants</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet"/>
  <link rel="stylesheet" href="styles/providerProfile.css" />
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet"/>
  <style>
    body {
      font-family: 'Poppins', Arial, sans-serif;
      background: #f8f9fa;
    }
    .admin-dashboard { display: flex; }
    .sidebar {
      min-height: 100vh;
      background: #212529;
      color: #fff;
      width: 220px;
      position: fixed;
      top: 0;
      left: 0;
      padding-top: 2rem;
      z-index: 100;
    }
    .sidebar-header {
      font-size: 1.3rem;
      font-weight: bold;
      margin-bottom: 2rem;
      text-align: center;
      display: flex;
      align-items: center;
      gap: 0.5rem;
      justify-content: center;
    }
    .sidebar-header i {
      font-size: 1.5rem;
    }
    .sidebar-menu {
      list-style: none;
      padding: 0;
    }
    .sidebar-menu li {
      margin-bottom: 1rem;
    }
    .sidebar-menu a, .sidebar-menu button {
      color: #fff;
      text-decoration: none;
      display: flex;
      align-items: center;
      gap: 0.7rem;
      background: none;
      border: none;
      width: 100%;
      text-align: left;
      padding: 0.5rem 1rem;
      border-radius: 0.3rem;
      transition: background 0.2s;
      font-size: 1rem;
    }
    .sidebar-menu a.active, .sidebar-menu a:hover, .sidebar-menu button:hover {
      background: #343a40;
      color: #fff;
    }
    .main-content {
      margin-left: 220px;
      padding: 2rem 2rem 1rem 2rem;
      width: 100%;
    }
    @media (max-width: 991px) {
      .sidebar { display: none; }
      .main-content { margin-left: 0; }
    }
  </style>
</head>
<body>
<div class="admin-dashboard">
  <!-- Sidebar -->
  <div class="sidebar d-lg-flex d-none flex-column">
    <div class="sidebar-header">
      <i class="fas fa-tools"></i>
      <span>MaintenanceHub</span>
    </div>
    <ul class="sidebar-menu">
      <li class="active">
        <a href="/dashboard">
          <i class="fas fa-tachometer-alt"></i>
          <span>Dashboard</span>
        </a>
      </li>
      <li>
        <a href="/api/admin/applicants">
          <i class="fas fa-user-plus"></i>
          <span id="admin-form">Add Provider</span>
        </a>
      </li>
      <li>
        <a href="/index.html">
          <i class="fas fa-user-shield"></i>
          <span>Home</span>
        </a>
      </li>
      <li>
        <button id="logoutBtn" class="btn btn-outline-light w-100">
          <i class="fas fa-sign-out-alt"></i>
          <span>Logout</span>
        </button>
      </li>
    </ul>
  </div>
<div class="main-content">
  <h2 class="mb-4">Provider Applicants</h2>

  <% if (providers.length === 0) { %>
    <p>No applicants found.</p>
  <% } else { %>
    <table class="table table-bordered table-striped">
      <thead class="table-dark">
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Address</th>
          <th>Personal Info</th>
          <th>Professions</th>
          <th>Skills</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% providers.forEach(provider => { %>
          <tr>
            <td><%= provider.name %></td>
            <td><%= provider.email %></td>
            <td><%= provider.phone %></td>
            <td><%= provider.address %></td>
            <td><%= provider.personal_info %></td>
            <td><%= provider.professions %></td>
            <td><%= provider.skills %></td>
            <td>
              <form method="POST" action="/api/admin/providers/approve/<%= provider.id %>" style="display:inline;">
                <button class="btn btn-success btn-sm" onclick="return confirm('Approve this provider?')">Approve</button>
              </form>
              <form method="POST" action="/api/admin/providers/decline/<%= provider.id %>" style="display:inline;">
                <button class="btn btn-danger btn-sm" onclick="return confirm('Decline and delete this provider?')">Decline</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>
</div>
<script src="jsFiles/adminDashboard.js"></script>
</body>
</html>
