    <div class="containe  mt-5"  >
      <h2 class="page-title">Submit Proposal</h2>
      <form
        method="POST"
        action="/jobs/<%= locals.job.id %>/proposal"
        class="proposal-form"
      >
        <!-- Cover Letter -->
        <div class="form-group">
          <label for="coverLetter">Cover Letter</label>
          <textarea
            id="coverLetter"
            name="coverLetter"
            class="form-control"
            placeholder="Write your cover letter here..."
            required
          ></textarea>
          
        </div>

        <!-- Expected Payment -->
        <div class="form-group">
          <label for="expectedPay">Expected Payment In Birr</label>
          <input
            id="expectedPay"
            type="number"
            name="expectedPay"
            class="form-control"
            placeholder="Enter your expected payment"
            required
          />
         
        </div>

        <!-- Availability -->
        <div class="form-group">
          <label for="availability">Availability</label>
          <select
            id="availability"
            name="availability"
            class="form-control"
            required
          >
            <option value="" disabled selected>Select your availability</option>
            <option value="immediate">Immediate</option>
            <option value="1_week">Within 1 Week</option>
            <option value="2_weeks">Within 2 Weeks</option>
            <option value="1_month">Within 1 Month</option>
          </select>
          
        </div>

        <!-- Proposed Timeline -->
        <div class="form-group">
          <label for="timeline">Proposed Timeline</label>
          <input
            id="timeline"
            type="text"
            name="timeline"
            class="form-control"
            placeholder="e.g., 2 weeks, 1 month"
            required
          />
          
        </div>

        
        <!-- Additional Notes -->
        <div class="form-group">
          <label for="additionalNotes">Additional Notes</label>
          <textarea
            id="additionalNotes"
            name="additionalNotes"
            class="form-control"
            placeholder="Add any additional information or questions..."
          ></textarea>
         
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-success">Submit Proposal</button>
      </form>
      
